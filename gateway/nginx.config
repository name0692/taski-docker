server {
  listen 80;
  server_name _;

  location /api/ {
    proxy_set_header Host $http_host;
    proxy_pass http://backend:8000/api/;
  }

  location /admin/ {
    proxy_set_header Host $http_host;
    proxy_pass http://backend:8000/admin/;
  }

  # Вся статика (SPA + Django) из общего тома
  location /static/ {
    alias /staticfiles/static/;
    access_log off;
    expires 1h;
  }

  location / {
    root /staticfiles;
    try_files $uri /index.html;
  }
}
